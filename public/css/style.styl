.js-fondo
	absolute()
	background-size cover !important
	width 100%
	height 100vh
	z-index -1
	&:BEFORE
		absolute()
		content ''
		background -webkit-linear-gradient(to top,#000000 50%, #FFFFFF)
		background -moz-linear-gradient(to top,#000000 50%, #FFFFFF)
		background -o-linear-gradient(to top,#000000 50%, #FFFFFF)
		background linear-gradient(to top,#000000 50%, #FFFFFF)
		z-index 0
		height 100vh
		opacity .3
	&.fondo1
		background url(../img/fondo/fondo1.jpg) no-repeat center center
	&.fondo2
		background url(../img/fondo/fondo2.jpg) no-repeat center center
	&.fondo3
		background url(../img/fondo/fondo3.jpg) no-repeat center center
	&.fondo4
		background url(../img/fondo/fondo4.jpg) no-repeat top center
	&.fondo5
		background url(../img/fondo/fondo5.jpg) no-repeat top center
#principal
	position relative
	height calc(100vh - 46px)
	.owl-stage-outer
	.owl-stage
		height calc(100vh - 46px)
	.owl-carousel
		absolute()
		width 100%
		z-index 1
		max-width 100%
		.owl-item
			height calc(100vh - 46px)
			.item
				height calc(100vh - 46px)
	.owl-nav
		flexCenter()
		position absolute
		right 60px
		bottom 50px
		.owl-prev
		.owl-next
			transition(all)
			background-color transparent
			opacity .7
			border-radius 0
			padding 0
			margin 0
			i
				font-size 23px
			&:hover
				opacity 1
			i
				color #FFFFFF
		.owl-prev
			order 1
		.owl-number
			order 2
			border-radius 0
			border none
			background-color transparent
			#numberItem
				font-size 22px
				line-height 24px
				font-family $light
				margin-left 10px
			#numberLength
				font-size 15px
				line-height 17px
				font-family $light
				margin-right 10px
		.owl-next
			order 3	
