$color       = #0064dc;
$light       = 'RobotoLight'
$lightItalic = 'RobotoLightItalic'
$regular     = 'RobotoRegular'
$medium      = 'RobotoMedium'
$bold        = 'RobotoBold'
transition(css-name)
	-webkit-transition css-name .25s linear
	-moz-transition css-name .25s linear
	-ms-transition css-name .25s linear
	-o-transition css-name .25s linear
	transition css-name .25s linear
flexCenter()
	display flex
	display -webkit-flex
	align-items center
flexStart()
	display flex
	display -webkit-flex
	align-items start
flexEnd()
	display flex
	display -webkit-flex
	align-items flex-end
absolute()
	position absolute
	top 0
	left 0
	right 0
	bottom 0
relative()
	position relative
	top 0
	left 0
	right 0
	bottom 0
.jm-section
	position relative
	padding 20px
.jm-height
	height 100vh
	&.jm-height--form
		height calc(100vh - 46px)
.jm-container
	width 100%
	max-width 1100px
	margin auto
	transition(max-width)
body
	overflow hidden
	overflow-y scroll
	font-family $regular
	color #000000
img
	width 100%
p
	margin 0
a
	text-decoration none !important
i
	vertical-align middle
h2
	font-family $regular
label
	font-weight 100
.jm-header
	height 46px
	background-color #F5F5F5
	position fixed
	top 0
	z-index 10
	width 100%
	flexCenter()
	.jm-container
		flexCenter()
		.jm-login
		.jm-staminer
			width 100%
			max-width 200px
			text-align right
			img
				max-width 98px
		.jm-staminer
			text-align left
		.jm-search
			width 100%
			.input-group
				max-width 490px
				margin auto
				width 100%
				.form-control
					height 28px
					border-radius 4px
					font-family $light
					font-size 11px
					border none
					box-shadow none
					outline none
				i
					position absolute
					right 6px
					top 3px
					z-index 2
					font-size 20px
		.jm-login
			.jm-button
				height 28px
				font-size 11px
				line-height 28px
		.jm-header--menu
			flexCenter()
			position relative
			.mdl-button--icon
				margin 0 5px
.jm-principal
	height 100vh
	flexCenter()
	align-items flex-end
	.jm-contenido
		margin-bottom 100px
		color #FFFFFF
		h2
			font-family $medium
			margin 10px 0
			font-size 35px
			line-height 38px
		p
			font-family $light
			font-size 21px
			line-height 24px
			margin-bottom 10px
	&.jm-center
		align-items center
		justify-content center
		.jm-contenido
			img
				max-width 180px
.jm-button
	background-color $color !important
	color #FFFFFF !important
	text-transform none
	box-shadow none
	border-radius 3px
	&.max-width
		width 100%
.jm-footer
	position relative
	background-color #F5F5F5
	color #818181
	font-size: 11px
	font-family $light
	height 46px
	flexCenter()
	.jm-container
		flexCenter()
		.jm-footer__left
			flexCenter()
			width 100%
			max-width 380px
			justify-content flex-start
			img
				max-width 98px
				margin-right 15px
		.jm-footer__right
			flexCenter()
			width 100%
			justify-content flex-end
			a
				margin 0 10px
				color #818181
.js-fondo
	absolute()
	background-size cover !important
	width 100%
	height 100vh
	z-index -1
	&:BEFORE
		absolute()
		content ''
		background-color #000000
		z-index 0
		height 100vh
		opacity .3
	&.fondo1
		background url(../img/fondo/fondo1.jpg) no-repeat center center
	&.fondo2
		background url(../img/fondo/fondo2.jpg) no-repeat center center
	&.fondo3
		background url(../img/fondo/fondo3.jpg) no-repeat center center
	&.fondo4
		background url(../img/fondo/fondo4.jpg) no-repeat top center
	&.fondo5
		background url(../img/fondo/fondo5.jpg) no-repeat top center
#principal
	position relative
	height calc(100vh - 46px)
	.owl-stage-outer
	.owl-stage
		height calc(100vh - 46px)
	.owl-carousel
		absolute()
		width 100%
		z-index 1
		max-width 100%
		.owl-item
			height calc(100vh - 46px)
			.item
				height calc(100vh - 46px)
	.owl-nav
		position absolute
		right 60px
		bottom 50px
		[class*=owl-]
			border-radius 50%
			background-color transparent
			border 1px solid #FFFFFF
			transition(all)
			&:hover
				background-color $color
				border-color $color
			i
				color #FFFFFF
			
.jm-fondo--session
	absolute()
	background-size cover !important
	width 100%
	height 100vh
	z-index -1
	&.login
		background url(../img/fondo/fondo_login.jpg) no-repeat center center
	&.registro
		background url(../img/fondo/fondo_registro.jpg) no-repeat center center
.jm-select
	&.jm-default
		.bootstrap-select
			.dropdown-toggle
				background-color #F5F5F5 !important
				border-color #F5F5F5
				margin 8px 0
	.bootstrap-select
		width 100% !important
		.dropdown-toggle
			outline none !important
			box-shadow none !important
			background-color transparent !important
			font-size 12px
		.dropdown-menu
			max-height 150px !important
			&>li
				&>a
					transition(all)
					font-size 12px
					outline none
					background-color transparent
					margin 0
					color #818181
					padding 5px 15px
					&:hover
						color $color
						background-color #EBF3FF
.jm-separate
	flexCenter()
	.jm-separate__left
		width 100%
		position relative
		height 100vh
	.jm-separate__right
		flexCenter()
		width 100%
		height 100vh
		justify-content center
		.jm-card__login
			width 100%
			max-width 340px
			padding 20px
			.jm-card__login--title
				h2
					margin 10px 0
					font-family $bold
					font-size 24px
					line-height 26px
				p
					font-size 14px
					line-height 18px
			.jm-card__login--actions
				margin 30px 0
				.jm-button 
					width 100%
			.jm-card__login--link
				text-align center
				margin 30px 0
				a
					color $color
					font-family $light
			.jm-card__login--forget
				flexCenter()
				.jm-forget__left
					width 100%
					justify-content flex-start
				.jm-forget__right
					width 100%
					text-align right
					a
						font-size 12px
						font-family $light
						color $color
.jm-input__group
	flexCenter()
	.jm-icon
		width 100%
		max-width 30px
	.jm-input
		width 100%
.jm-textarea
.jm-input
	width 100%
	.form-control
		background-color #F5F5F5
		height 36px
		border-radius 3px !important
		border none
		outline none !important
		box-shadow none !important
		font-size 12px
		line-height 14px
		margin 8px 0
	&.jm-input--small
		.form-control
			height 28px
			background-color #FFFFFF
	&.jm-input--medium
		margin 10px 0
		label
			margin 0
			font-size 12px
			color #818181
		.form-control
			height 33px
			background-color #FFFFFF
			margin 0
	&.jm-textarea-default
		.form-control
			background-color #FFFFFF
.jm-estatura
.jm-password
	display grid
	grid-template-columns 1fr 1fr 1fr
	grid-column-gap 10px
.jm-nacimiento
	display grid
	grid-template-columns 100px 1fr 100px
	grid-column-gap 10px
.jm-textarea
	.form-control
		height 100%
		resize none
.jm-check
	font-size 12px
	font-family $light
	margin 8px 0
	color #818181
	line-height 16px
	a
		color $color
.jm-switch
	width 100%
.jm-opacity
	opacity 0
	transform translateX(300px);
.jm-opacity-block
	opacity 0
	transform translateX(-300px);
.jm-tabs
	border 2px solid $color
	&>li
		margin 0
		width 50%
		text-align center
		&>a
			border none !important
			color $color
			font-size 13px
			padding 6px 15px
	&>li.active
		&>a
			background-color $color
			color #FFFFFF
			border-radius 0
			margin 0
			&:focus
			&:hover
				background-color $color
				color #FFFFFF
.jm-perfil--banner
	height 350px
	background-color #818181
	margin-top 46px
	position relative
	.jm-perfil__editar
		position absolute
		top 5px
		left 5px
		button 
			i
				color #FFFFFF
	.jm-perfil__shared
		position absolute
		top 5px
		right 5px
		button 
			i
				color #FFFFFF
	.jm-perfil__logros
		position absolute
		bottom 5px
		left 5px
		a 
			color #FFFFFF
			font-size 14px
			line-height 16px
			i
				color #FFFFFF
				margin-right 5px
	.jm-perfil__seguidores
		position absolute
		bottom 5px
		right 5px
.jm-perfil--contenido
	margin-top 15px
	display grid
	grid-template-columns 260px 1fr 260px
	grid-column-gap 20px
	.jm-informacion
		.jm-informacion--perfil
			background-color #F5F5F5
			.jm-informacion--perfil__title
				padding 5px 20px
				border-bottom 1px solid #E8E9EB
				position relative
				a
					font-size 14px
					color #000000
					i
						margin-right 10px
				.jm-edit
					transition(opacity)
					opacity 0
					position absolute
					top 5px
					right 10px
					button
						position absolute
						right 0
						transition(opacity)
						&.jm-button--first
							z-index 5
						&.jm-button--second
							opacity 0
							z-index 0
							border-color $color
							i
								color $color
				&:hover
					.jm-edit
						opacity 1
			.jm-informacion--perfil__contenido
				padding 0 20px
				.jm-input__group
					border-bottom 1px solid #e8e9eb
				.jm-informacion__input
					flexCenter()
					border-bottom 1px solid #e8e9eb
					.jm-input__left
						width 100%
					.jm-input__right
						width 100%
					.jm-select
						.bootstrap-select
							.dropdown-toggle
								background-color #FFFFFF !important
								border-color #FFFFFF
								margin 8px 0
.jm-configuration__subtitle
	background-color #EDEDED
	.jm-subtitle
		flexCenter()
		height 44px
		padding 0 15px
		.jm-subtitle__left
			width 100%
			a
				color #808080
				cursor pointer
				i 
					margin-right 10px
		.jm-subtitle__right
			width 100%
			text-align right
			a
				color #808080
				cursor pointer
				margin 0 5px
				i 
					margin-right 10px
.jm-galeria--fotos
	display grid
	grid-template-columns repeat(3,246px)
	grid-template-rows repeat(4,246px)
	grid-gap 20px
	.jm-galeria__foto
		background-color #EDEDED
		&:first-child
			grid-column span 2
			grid-row span 2
.jm-shared
	.jm-shared--first
		flexCenter()
		height 80px
		background-color #FCFCFC
		padding 0 10px
		.jm-shared__foto
			width 100%
			max-width 60px
			text-align center
			img
				width 40px
				height 40px
		.jm-shared__contenido
			width 100%
			.jm-line
				background-color transparent
				font-size 14px
		.jm-shared__actions
			width 100%
			max-width 60px
			text-align center
			button
				background-color transparent
				box-shadow none
				i 
					color $color
	.jm-shared--second
		background-color #F5F5F5
		height 40px
.jm-publicaciones
	background-color #F5F5F5
	margin-top 20px
	.jm-publication
		.jm-publication__title
			flexCenter()
			height 60px
			position relative
			border-bottom 1px solid #e8e9eb
			padding 0 10px
			.jm-publication__foto
				width 100%
				max-width 60px
				text-align center
				padding 0 10px
				img
					max-width 40px
			.jm-publication__name
				padding 0 5px
				width 100%
				h2
					font-size 14px
					line-height 16px
					margin 3px 0
				p
					font-size 12px
					line-height 14px
					color #818181
			.jm-publication__time
				width 100%
				max-width 100px
				text-align right
		.jm-publication__contenido
			height 160px
			.jm-empty__publicacion
				flexCenter()
				height 100%
				justify-content center
				flex-direction column
				width 100%
				max-width 250px
				text-align center
				margin auto
				img
					max-width 62px
					margin-bottom 10px
				p
					font-family $light
					font-size 14px
					line-height 16px
					color #818181
					font-family $lightItalic
				h2
					font-size 16px
					font-family $light
					line-height 18px
					margin 5px 0
		.jm-publication__actions
			height 50px
			border-top 1px solid #e8e9eb
.jm-galery
	background-color #F5F5F5
	margin-bottom 15px
	.jm-galery__title
		flexCenter()
		height 40px
		border-bottom 1px solid #e8e9eb
		padding 0 15px
		color #818181
		cursor pointer
		i
			margin-right 10px
		h2
			font-size 14px
			margin 5px 0
			line-height 16px
	.jm-galery__contenido
		height 275px
		&.scroll
			overflow-y scroll
		&::-webkit-scrollbar
			width 5px
		.jm-empty__image
			flexCenter()
			height 100%
			justify-content center
			flex-direction column
			width 100%
			max-width 150px
			text-align center
			margin auto
			img
				max-width 46px
				margin-bottom 20px
			p
				font-size 11px
				font-family $light
				line-height 13px
				color #818181
	.jm-red
		flexCenter()
		border-bottom 1px solid #E8E9EB
		padding 0 15px
		height 55px
		&:last-child
			border none
		.jm-red__left
			width 100%
			max-width 45px
			text-align center
			img
				max-width 40px
		.jm-red__right
			width 100%
			max-width 175px
			padding-left 10px
			h2
				font-size 14px
				line-height 16px
				margin 3px 0
			p
				font-family $light
				font-size 12px
				line-height 14px
				color #818181
				width 100%
				max-width 175px
				text-overflow ellipsis
				white-space nowrap
				overflow hidden
				
.jm-footer__galeria
	.jm-footer__galeria--links
		flexCenter()
		flex-wrap wrap
		border-bottom 1px solid #E8E9EB
		padding 10px
		a
			color #818181
			font-size 11px
			line-height 13px
			width 100%
			max-width 80px
			margin 5px 0
		.jm-select
			width 100%
			max-width 80px
			.dropdown-toggle
				font-size 11px
				color #818181
	strong
		padding 10px
		color #818181
		font-size 13px
		line-height 15px
		display block
		font-weight 100
.jm-configuracion
	display grid
	grid-template-columns 260px 1fr
	grid-column-gap 20px
	margin-top 65px
	.jm-configuracion__tabs
		background-color #F5F5F5
		h2
			font-size  14px
			line-height 16px
			margin 3px 0
			padding 10px 20px
			border-bottom 1px solid #E8E9EB
		.jm-tabs--configuration
			border none
			&>li
				float none
				&>a
					transition(background-color)
					border none
					color #818181
					margin 0
					font-size 12px
					line-height 14px
					font-family $light
					&:hover
						background-color #EBF3FF
						color $color
			&>li.active
				&>a
					background-color #EBF3FF
					color $color
	.jm-configuration__content
		background-color #F5F5F5
		border-bottom 1px solid #E8E9EB
		padding 15px
		.jm-configuracion--perfil
			display grid
			grid-template-columns 200px 1fr
			grid-column-gap 20px
			.jm-configuracion--foto
				img 
					max-width 185px
		.jm-configuracion--contenido
			width 100%
			max-width 430px
			&.redes
				max-width 360px
	.jm-configuration__actions
		flexCenter()
		background-color #F5F5F5
		padding 15px
		.jm-actions__left
			width 100%
		.jm-actions__right
			width 100%
			text-align right
.jm-redes
	flexCenter()
	.jm-redes__left
		width 100%
		p
			font-size 14px
			line-height 16px
			font-family $light
			i 
				color #34373D
				margin-right 10px
	.jm-redes__right
		flexCenter()
		justify-content flex-end
		width 100%
		max-width 60px
.jm-title
	background-color $color
	color #FFFFFF
	padding 10px 20px
	h2 
		font-size 14px
		line-height 16px
		margin 3px 0
.jm-opacity--done
	z-index 0 !important
	opacity 0 !important
.jm-opacity--none
	z-index 5 !important
	opacity 1 !important
#informacion-oculta
	display none
[class*=col-]
	padding-left 5px
	padding-right 5px
.modal
	.jm-modal
		width 375px
		.mdl-card
			max-width 375px
			display block
			height 545px
			.jm-padding
				padding 35px
				position absolute
				top 0
				transition(all)
				.mdl-card__title
					h2
						font-family $regular
						font-size 20px
						line-height 24px
						margin 10px 0
					p
						font-size 13px
						line-height 18px
						font-family $light
				.mdl-card__actions
					padding 16px
				.mdl-card__menu
					z-index 10
/*MATERIAL*/
.mdl-card
.mdl-card__supporting-text
	width 100%
.mdl-card__title
	display block
/*SCROLL*/
::-webkit-scrollbar
	width 8px
	height 5px
::-webkit-scrollbar-track
	background-color transparent
	border-radius 10px
::-webkit-scrollbar-thumb
	background-color #AAAAAA
	border-radius 10px