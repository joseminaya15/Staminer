$color   = #0064dc;
$light   = 'RobotoLight'
$regular = 'RobotoRegular'
$medium  = 'RobotoMedium'
$bold    = 'RobotoBold'
transition(css-name)
	-webkit-transition css-name .3s linear
	-moz-transition css-name .3s linear
	-ms-transition css-name .3s linear
	-o-transition css-name .3s linear
	transition css-name .3s linear
flexCenter()
	display flex
	display -webkit-flex
	align-items center
flexStart()
	display flex
	display -webkit-flex
	align-items start
flexEnd()
	display flex
	display -webkit-flex
	align-items flex-end
absolute()
	position absolute
	top 0
	left 0
	right 0
	bottom 0
relative()
	position relative
	top 0
	left 0
	right 0
	bottom 0
.jm-section
	position relative
	padding 20px
.jm-height
	height 100vh
.jm-container
	width 100%
	max-width 1150px
	margin auto
	transition(max-width)
body
	overflow hidden
	overflow-y scroll
	font-family $regular
img
	width 100%
p
	margin 0
a
	text-decoration none !important
.jm-header
	height 46px
	background-color #F5F5F5
	position fixed
	z-index 10
	width 100%
	flexCenter()
	.jm-container
		flexCenter()
		.jm-login
		.jm-staminer
			width 100%
			max-width 200px
			text-align right
			img
				max-width 120px
		.jm-staminer
			text-align left
		.jm-search
			width 100%
			.input-group
				max-width 490px
				margin auto
				width 100%
				i
					position absolute
					right 5px
					top 3px
					z-index 2
.jm-principal
	height 100vh
	flexCenter()
	align-items flex-end
	.jm-contenido
		margin-bottom 100px
		color #FFFFFF
		h2
			font-family $medium
			margin 10px 0
			font-size 35px
			line-height 38px
		p
			font-family $light
			font-size 21px
			line-height 24px
			margin-bottom 10px
	&.jm-center
		align-items center
		justify-content center
		.jm-contenido
			max-width 140px
			margin auto
			text-align center
			h2
				font-size 42px
				line-height 48px
				letter-spacing 20px
				font-style italic
.jm-button
	background-color $color !important
	color #FFFFFF
	text-transform none
	box-shadow none
	border-radius 3px
	&.max-width
		width 100%
.jm-footer
	position relative
	background-color #F5F5F5
	color #818181
	font-size: 11px
	font-family $light
	height 46px
	flexCenter()
	.jm-container
		flexCenter()
		.jm-footer__left
			flexCenter()
			width 100%
			max-width 380px
			justify-content flex-start
			img
				max-width 120px
				margin-right 15px
		.jm-footer__right
			flexCenter()
			width 100%
			justify-content flex-end
			a
				margin 0 10px
.js-fondo
	absolute()
	background-size cover !important
	width 100%
	height 100vh
	z-index -1
	&:BEFORE
		absolute()
		content ''
		background-color #000000
		z-index 0
		height 100vh
		opacity .3
	&.fondo1
		background url(../images/fondo/fondo1.jpg) no-repeat center center
	&.fondo2
		background url(../images/fondo/fondo2.jpg) no-repeat center center
	&.fondo3
		background url(../images/fondo/fondo3.jpg) no-repeat center center
	&.fondo4
		background url(../images/fondo/fondo4.jpg) no-repeat center center
	&.fondo5
		background url(../images/fondo/fondo5.jpg) no-repeat center center
#principal
	position relative
	height calc(100vh - 46px)
	.owl-stage-outer
	.owl-stage
		height calc(100vh - 46px)
	.owl-carousel
		absolute()
		width 100%
		z-index 1
		max-width 100%
		.owl-item
			height calc(100vh - 46px)
			.item
				height calc(100vh - 46px)
.jm-fondo--session
	absolute()
	background-size cover !important
	width 100%
	height 100vh
	z-index -1
	&.login
		background url(../images/fondo/fondo_login.jpg) no-repeat center center
.jm-select
	.bootstrap-select
		width 100% !important
		.dropdown-toggle
			outline none !important
			box-shadow none !important
.jm-separate
	flexCenter()
	.jm-separate__left
		width 100%
		position relative
		height 100vh
	.jm-separate__right
		flexCenter()
		width 100%
		height 100vh
		justify-content center
		.jm-card__login
			width 100%
			max-width 340px
			padding 20px
			.jm-card__login--title
				h2
					margin 20px 0
					font-family $bold
					font-size 24px
			.jm-card__login--actions
				margin 30px 0
				.jm-button 
					width 100%
			.jm-card__login--link
				text-align center
				margin 30px 0
				a
					color $color
					font-family $light
			.jm-card__login--forget
				flexCenter()
				.jm-forget__left
					width 100%
					justify-content flex-start
				.jm-forget__right
					width 100%
					text-align right
					a
						font-size 12px
						font-family $light
						color $color
.jm-textarea
.jm-input
	width 100%
	margin 15px 0
	.form-control
		background-color #F5F5F5
		height 36px
		border-radius 3px !important
		border none
		outline none !important
		box-shadow none !important
.jm-textarea
	.form-control
		height 100%
.jm-remember
	font-size 12px
	font-family $light
.jm-opacity
	opacity 0
	transform translateX(300px);
.jm-opacity-block
	opacity 0
	transform translateX(-300px);
.modal
	.jm-modal
		width 375px
		.mdl-card
			max-width 375px
			display block
			height 545px
			.jm-padding
				padding 35px
				position absolute
				top 0
				transition(all)
				.mdl-card__title
					h2
						font-family $regular
						font-size 20px
						line-height 24px
						margin 10px 0
					p
						font-size 13px
						line-height 18px
						font-family $light
				.mdl-card__actions
					padding 16px
/*MATERIAL*/
.mdl-card
.mdl-card__supporting-text
	width 100%
.mdl-card__title
	display block
/*SCROLL*/
::-webkit-scrollbar
	width 8px
	height 5px
::-webkit-scrollbar-track
	background-color transparent
	border-radius 10px
::-webkit-scrollbar-thumb
	background-color #AAAAAA
	border-radius 10px