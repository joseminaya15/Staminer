$color       = #0064dc;
$default     = #383A3F;
$light       = 'RobotoLight'
$lightItalic = 'RobotoLightItalic'
$regular     = 'RobotoRegular'
$medium      = 'RobotoMedium'
$bold        = 'RobotoBold'
transition(css-name)
	-webkit-transition css-name .25s linear
	-moz-transition css-name .25s linear
	-ms-transition css-name .25s linear
	-o-transition css-name .25s linear
	transition css-name .25s linear
flexCenter()
	display flex
	display -webkit-flex
	align-items center
flexStart()
	display flex
	display -webkit-flex
	align-items start
flexEnd()
	display flex
	display -webkit-flex
	align-items flex-end
absolute()
	position absolute
	top 0
	left 0
	right 0
	bottom 0
relative()
	position relative
	top 0
	left 0
	right 0
	bottom 0
.jm-section
	position relative
	padding 20px
.jm-height
	height 100vh
	&.jm-height--form
		height calc(100vh - 46px)
.jm-container
	width 100%
	max-width 1100px
	margin auto
	transition(max-width)
body
	overflow hidden
	overflow-y scroll
	font-family $regular
	color #000000
	&.over-hidden
		overflow hidden
img
	width 100%
p
	margin 0
a
	text-decoration none !important
i
	vertical-align middle
h2
	font-family $regular
label
	font-weight 100
.jm-header
